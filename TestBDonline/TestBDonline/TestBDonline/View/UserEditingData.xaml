<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestBDonline.View.UserEditingData">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edycja użytkownika"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout BackgroundColor="DimGray">
            <Label x:Name="id"
                   Text="ID"
                       VerticalOptions="StartAndExpand"
                       HorizontalOptions="CenterAndExpand"
                   HorizontalTextAlignment="Center"
                   TextColor="White"
                       FontSize="20"/>
            <Entry x:Name="email"
                   TextColor="White"
                   PlaceholderColor="White"
                       Placeholder="Edytuj email"
                       VerticalOptions="StartAndExpand"
                   HorizontalTextAlignment="Center"/>
            <Entry x:Name="points"
                   TextColor="White"
                   PlaceholderColor="White"
                       Placeholder="Edytuj liczbę punktów"
                       VerticalOptions="StartAndExpand"
                   Keyboard="Numeric"
                   HorizontalTextAlignment="Center"/>
            <Picker SelectedIndex="0"
                    TextColor="White"
                    Title="Status"
                    TitleColor="White"
                        x:Name="picker"
                    HorizontalTextAlignment="Center">
            </Picker>
            <Label Text="Wymagaj reset hasła przy następnym logowaniu"
                   TextColor="White"
                   HorizontalTextAlignment="Center"/>
            <CheckBox IsChecked="False"
                        HorizontalOptions="CenterAndExpand"
                        x:Name="toggle"/>
            <Button Text="Usuń konto"
                    TextColor="White"
                        VerticalOptions="End"
                        BackgroundColor="PaleVioletRed"
                        Clicked="DeleteAccount"/>
            <Button Text="Zastosuj"
                        VerticalOptions="End"
                        BackgroundColor="LightGoldenrodYellow"
                        Clicked="Apply"
                    TextColor="DimGray"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>