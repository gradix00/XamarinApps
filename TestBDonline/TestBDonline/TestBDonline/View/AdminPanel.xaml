<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestBDonline.View.AdminPanel"
             Title="Panel administrowania">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Panel admina"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand"
                     HorizontalOptions="CenterAndExpand">
            <Button Text="Utwórz post"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="OpenPageAddingPost"
                    WidthRequest="230"/>
            <Button Text="Utwórz nagrode"
                    HorizontalOptions="CenterAndExpand"
                    WidthRequest="230"/>
            <Button Text="Dziennik zdarzeń (Beta)"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="OpenPageEventsLog"
                    WidthRequest="230"/>
            <Button Text="Zarządzaj użytkownikami"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="OpenPageUsersManagement"
                    WidthRequest="230"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>