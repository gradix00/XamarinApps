<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestBDonline.View.News">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Nowości eWads"/>
        <ToolbarItem IconImageSource="https://toppng.com/uploads/preview/black-and-white-stockportable-network-account-icon-11553436383dwuayhjyvo.png"
                     Clicked="OpenPageAccount"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <RefreshView Refreshing="LoadNews"
                     x:Name="refreshView">
            <ScrollView HorizontalOptions="FillAndExpand"
                      VerticalOptions="FillAndExpand"
                        BackgroundColor="CornflowerBlue">
                <StackLayout VerticalOptions="StartAndExpand"
                             HorizontalOptions="FillAndExpand"
                             BackgroundColor="CornflowerBlue"
                             x:Name="page"/>
            </ScrollView>
        </RefreshView>
    </ContentPage.Content>
</ContentPage>