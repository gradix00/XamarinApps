<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestBDonline.View.EventsLog">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Dziennik zdarzeń"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="90"/>
                </Grid.ColumnDefinitions>
                <Label Text="id"
                       FontAttributes="Bold"
                       FontSize="15"
                       TextTransform="Uppercase"
                       Grid.Column="0"/>
                <Label Text="autor"
                       FontAttributes="Bold"
                       FontSize="15"
                       TextTransform="Uppercase"
                       Grid.Column="1"/>
                <Label Text="opis"
                       FontAttributes="Bold"
                       FontSize="15"
                       TextTransform="Uppercase"
                       Grid.Column="2"/>
                <Label Text="data"
                       FontAttributes="Bold"
                       FontSize="15"
                       TextTransform="Uppercase"
                       Grid.Column="3"/>
            </Grid>
            <ListView VerticalOptions="StartAndExpand"
                      HorizontalOptions="FillAndExpand"
                      ItemsSource="{Binding EventCell}"
                      IsPullToRefreshEnabled="True"
                      Refreshing="RefresPostsList"
                      x:Name="list" RefreshControlColor="CornflowerBlue">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell Height="100">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="90"/>
                                </Grid.ColumnDefinitions>
                                <Label Text="{Binding ID}"
                                       Grid.Column="0"/>
                                <Label Text="{Binding Autor}"
                                       Grid.Column="1"
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding Details}"
                                       Grid.Column="2"
                                       FontAttributes="Italic"/>
                                <Label Text="{Binding Date}"
                                       Grid.Column="3"
                                       FontAttributes="Bold"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>